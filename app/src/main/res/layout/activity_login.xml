<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/left_login"
                android:layout_marginTop="79dp"
                android:fontFamily="@font/roboto"
                android:text="@string/welcome_login"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/Headline"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/app_name"
                android:textColor="@color/colorAccent"
                android:textSize="50sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/Medium"
                android:layout_marginRight="@dimen/Small"
                android:layout_marginLeft="@dimen/Small"
                android:background="@color/colorPrimaryDark"
                android:alpha="0.5"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="@dimen/Big"
                android:layout_marginEnd="36dp"
                app:hintEnabled="false"
                android:textColorHint="@color/secondaryPrimaryDark">

                <EditText
                    android:id="@+id/txtCorreoLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/VeryBig"
                    android:drawableStart="@drawable/profile"
                    android:drawablePadding="@dimen/Diminute"
                    android:hint="@string/email"
                    android:padding="@dimen/VerySmall"
                    android:fontFamily="@font/roboto"
                    android:textColorHint="@color/Gray"
                    android:textSize="@dimen/Normal"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/shape_tvgeneral"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="@dimen/Medium"
                android:layout_marginEnd="36dp"
                app:hintEnabled="false"
                android:textColorHint="@color/secondaryPrimaryDark"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/Gray">

                <EditText
                    android:id="@+id/txtPasswordLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/VeryBig"
                    android:drawableStart="@drawable/lock"
                    android:hint="@string/pass"
                    android:drawablePadding="@dimen/Diminute"
                    android:padding="@dimen/VerySmall"
                    android:inputType="textPassword"
                    android:background="@drawable/shape_tvgeneral"
                    android:textColorHint="@color/Gray"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/Normal"/>

            </com.google.android.material.textfield.TextInputLayout>

            <RadioButton
                android:id="@+id/rdSession_loginActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:layout_marginTop="@dimen/Medium"
                android:layout_marginEnd="42dp"
                android:buttonTint="@color/Gray"
                android:text="@string/session_active"
                android:fontFamily="@font/roboto"
                android:textColor="@color/Gray"
                android:textSize="@dimen/Normal"
                android:paddingLeft="@dimen/VerySmall"/>

            <Button
                android:id="@+id/btn_start_session_loginActivity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/VeryBig"
                android:layout_marginStart="46dp"
                android:layout_marginTop="@dimen/Medium"
                android:layout_marginEnd="46dp"
                android:fontFamily="@font/roboto"
                android:onClick="ingresar"
                android:text="@string/sign_in"
                android:textAllCaps="false"
                android:textColor="@color/colorSecondary"
                android:textSize="@dimen/Normal"
                android:background="@drawable/button_start_sesion"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Medium"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register"
                    android:textSize="@dimen/Normal"
                    android:textColor="@color/Gray"
                    android:fontFamily="@font/roboto"/>

                <Button
                    android:id="@+id/btn_register_loginActivity"
                    style="@style/transparente"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:onClick="registrar"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/title_activity_login"
                    android:textAllCaps="false"
                    android:textColor="@color/Black"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>