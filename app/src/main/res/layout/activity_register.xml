<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.activities.RegisterActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Toolbar
            android:id="@+id/toolbarBackRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/Small"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/lets_start"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/Title"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/VerySmall"
                android:gravity="center_horizontal"
                android:fontFamily="@font/roboto"
                android:text="@string/msg_create_account"
                android:textColor="@color/Gray"
                android:textSize="@dimen/Normal"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/Medium"
                android:layout_marginRight="@dimen/Small"
                android:layout_marginLeft="@dimen/Small"
                android:background="@color/colorPrimaryDark"
                android:alpha="0.5"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Small"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:hint="@string/names"
                android:textColorHint="@color/Gray"
                app:boxCornerRadiusBottomEnd="@dimen/VerySmall"
                app:boxCornerRadiusBottomStart="@dimen/VerySmall"
                app:boxCornerRadiusTopEnd="@dimen/VerySmall"
                app:boxCornerRadiusTopStart="@dimen/VerySmall"
                app:boxStrokeColor="@color/Gray"
                app:hintTextColor="@color/Gray"
                style="@style/TextInputLayoutStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNamesResgisterActivity"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:padding="@dimen/VerySmall"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/Normal"
                    android:inputType="textPersonName"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Small"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:hint="@string/last_names"
                android:textColorHint="@color/Gray"
                app:boxCornerRadiusBottomEnd="@dimen/VerySmall"
                app:boxCornerRadiusBottomStart="@dimen/VerySmall"
                app:boxCornerRadiusTopEnd="@dimen/VerySmall"
                app:boxCornerRadiusTopStart="@dimen/VerySmall"
                app:boxStrokeColor="@color/Gray"
                app:hintTextColor="@color/Gray"
                style="@style/TextInputLayoutStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLastNamesRegisterActivity"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/Gray"
                    android:padding="@dimen/VerySmall"
                    android:inputType="textPersonName"
                    android:textSize="@dimen/Normal" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Small"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:hint="@string/address"
                android:textColorHint="@color/Gray"
                app:boxCornerRadiusBottomEnd="@dimen/VerySmall"
                app:boxCornerRadiusBottomStart="@dimen/VerySmall"
                app:boxCornerRadiusTopEnd="@dimen/VerySmall"
                app:boxCornerRadiusTopStart="@dimen/VerySmall"
                app:boxStrokeColor="@color/Gray"
                app:hintTextColor="@color/Gray"
                style="@style/TextInputLayoutStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAddressRegisterActivity"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/Gray"
                    android:padding="@dimen/VerySmall"
                    android:inputType="textPersonName"
                    android:textSize="@dimen/Normal" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Small"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:hint="@string/telephone"
                android:textColorHint="@color/Gray"
                app:boxCornerRadiusBottomEnd="@dimen/VerySmall"
                app:boxCornerRadiusBottomStart="@dimen/VerySmall"
                app:boxCornerRadiusTopEnd="@dimen/VerySmall"
                app:boxCornerRadiusTopStart="@dimen/VerySmall"
                app:boxStrokeColor="@color/Gray"
                app:hintTextColor="@color/Gray"
                style="@style/TextInputLayoutStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTelephoneRegisterActivity"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/Gray"
                    android:padding="@dimen/VerySmall"
                    android:inputType="phone"
                    android:textSize="@dimen/Normal" />

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/Medium"
                android:layout_marginRight="@dimen/Small"
                android:layout_marginLeft="@dimen/Small"
                android:background="@color/colorPrimaryDark"
                android:alpha="0.5"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Small"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:hint="@string/email"
                android:textColorHint="@color/Gray"
                app:boxCornerRadiusBottomEnd="@dimen/VerySmall"
                app:boxCornerRadiusBottomStart="@dimen/VerySmall"
                app:boxCornerRadiusTopEnd="@dimen/VerySmall"
                app:boxCornerRadiusTopStart="@dimen/VerySmall"
                app:boxStrokeColor="@color/Gray"
                app:hintTextColor="@color/Gray"
                style="@style/TextInputLayoutStyle">

                <EditText
                    android:id="@+id/etEmailResgisterActivity"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/Gray"
                    android:padding="@dimen/VerySmall"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/Normal"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Small"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:hint="@string/pass"
                android:textColorHint="@color/Gray"
                app:boxCornerRadiusBottomEnd="@dimen/VerySmall"
                app:boxCornerRadiusBottomStart="@dimen/VerySmall"
                app:boxCornerRadiusTopEnd="@dimen/VerySmall"
                app:boxCornerRadiusTopStart="@dimen/VerySmall"
                app:boxStrokeColor="@color/Gray"
                app:hintTextColor="@color/Gray"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/Gray"
                style="@style/TextInputLayoutStyle">


                <EditText
                    android:id="@+id/etPassResgisterActivity"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/Gray"
                    android:padding="@dimen/VerySmall"
                    android:inputType="textPassword"
                    android:textSize="@dimen/Normal"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Small"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:hint="@string/confirmPass"
                android:textColorHint="@color/Gray"
                app:boxCornerRadiusBottomEnd="@dimen/VerySmall"
                app:boxCornerRadiusBottomStart="@dimen/VerySmall"
                app:boxCornerRadiusTopEnd="@dimen/VerySmall"
                app:boxCornerRadiusTopStart="@dimen/VerySmall"
                app:boxStrokeColor="@color/Gray"
                app:hintTextColor="@color/Gray"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/Gray"
                style="@style/TextInputLayoutStyle">


                <EditText
                    android:id="@+id/etConfirmPassResgisterActivity"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/Gray"
                    android:padding="@dimen/VerySmall"
                    android:inputType="textPassword"
                    android:textSize="@dimen/Normal"/>
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/Medium"
                android:layout_marginRight="@dimen/Small"
                android:layout_marginLeft="@dimen/Small"
                android:background="@color/colorPrimaryDark"
                android:alpha="0.5"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_create_account_registerActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:layout_marginTop="@dimen/Medium"
                android:layout_marginEnd="46dp"
                android:layout_marginBottom="@dimen/Small"
                app:backgroundTint="@color/AccentLow"
                app:cornerRadius="@dimen/VerySmall"
                app:rippleColor="@color/colorAccent"
                app:elevation="@dimen/Diminute"
                android:letterSpacing="0"
                android:onClick="userRegister"
                android:fontFamily="@font/roboto"
                android:text="@string/create_account"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/Normal"/>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/rlBaseRegister"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:alpha="0.4"/>

        <ProgressBar
            android:id="@+id/pbRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>