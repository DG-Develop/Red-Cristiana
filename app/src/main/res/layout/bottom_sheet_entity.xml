<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".presentation.ui.fragments.BottomSheetConfig">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/Medium"
        android:paddingBottom="@dimen/Big"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/VerySmall"
        android:id="@+id/bottom_sheet_entity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoRed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/Small"
                app:icon="@drawable/ic_network"
                app:iconTint="@color/GrayDark"
                android:letterSpacing="0"
                android:text="@string/bs_network"
                android:textColor="@color/GrayDark"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/GrayLow"
                android:layout_marginStart="@dimen/Small"
                android:layout_marginEnd="@dimen/Small"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoSubred"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/Small"
                app:icon="@drawable/ic_subnetwork"
                app:iconTint="@color/GrayDark"
                android:letterSpacing="0"
                android:text="@string/bs_subnetwork"
                android:textColor="@color/GrayDark"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/GrayLow"
                android:layout_marginStart="@dimen/Small"
                android:layout_marginEnd="@dimen/Small"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoCelula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/Small"
                app:icon="@drawable/ic_celula"
                app:iconTint="@color/GrayDark"
                android:letterSpacing="0"
                android:text="@string/bs_cell"
                android:textColor="@color/GrayDark"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/GrayLow"
                android:layout_marginStart="@dimen/Small"
                android:layout_marginEnd="@dimen/Small"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
