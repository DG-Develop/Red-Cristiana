<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragments.ConfigurationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/cvProfile"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/Medium"
                android:elevation="@dimen/Diminute">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/Small">

                    <ImageView
                        android:id="@+id/iv_profile_configurarion"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/profile"
                        android:layout_alignParentStart="true"
                        android:tint="@color/colorPrimaryDark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/iv_profile_configurarion"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/Small"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/profile_configurarion_title"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/Subtitle"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_go_configuration" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvCreate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/Medium"
                android:elevation="@dimen/Diminute">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/Small">

                    <ImageView
                        android:id="@+id/iv_create_configurarion"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_add"
                        android:layout_alignParentStart="true"
                        android:tint="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/tvCreateConfiguration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/iv_create_configurarion"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/Small"
                        android:fontFamily="@font/roboto_bold"
                        tools:text="Crear Red"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/Subtitle"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_go_configuration" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvManageUser"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/Medium"
                android:elevation="@dimen/Diminute">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/Small">

                    <ImageView
                        android:id="@+id/iv_users_configurarion"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_key"
                        android:layout_alignParentStart="true"
                        android:tint="@color/colorPrimaryDark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/iv_users_configurarion"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/Small"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/user_managment_configurarion_title"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/Subtitle"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_go_configuration" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvUploadNotice"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/Medium"
                android:elevation="@dimen/Diminute">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/Small">

                    <ImageView
                        android:id="@+id/iv_upload_configurarion"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_news"
                        android:layout_alignParentStart="true"
                        android:tint="@color/colorPrimaryDark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/iv_upload_configurarion"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/Small"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/upload_notice_configurarion_title"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/Subtitle"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_go_configuration" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvCloseSession"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/Medium"
                android:layout_marginBottom="@dimen/Medium"
                android:elevation="@dimen/Diminute">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/Small">

                    <ImageView
                        android:id="@+id/iv_off_configurarion"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_power_off"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/iv_off_configurarion"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/Small"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/close_session_configurarion_title"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/Subtitle"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_go_configuration" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/rlBaseConfiguration"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>

        <ProgressBar
            android:id="@+id/pbLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</FrameLayout>